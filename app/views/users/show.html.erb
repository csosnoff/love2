<p id="notice"><%= notice %></p>

<p>
  <h1><%= @user.name %>'s Profile</h1>
</p>
  <%= @user.email %>

  <% @user.items.each do |item| %>
   <ul>
    <li>
    <div><%=link_to item.name, item %></div>
    <div><%=link_to item.user.name, user_url(item.user_id) %></div>
    <div><%= item.story %></div>
    <div>$<%= item.price %></div>
    <div><%=link_to item.category.name, category_url(item.category_id) %></div>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= button_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
  <% end %>



