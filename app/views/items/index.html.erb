
<% if session[:email].present? %>
You're looking spritely today, <%= User.find_by_email(session[:email]).name %>.
<% end %>

<h1>Listing items</h1>

<table>
  <tr>
    <th>Story</th>
    <th>User</th>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.story %></td>
    <td><%= item.user.name %></td>
    <td><%= item.name %></td>
    <td>$<%= item.price %></td>
    <td><%= item.category.name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

